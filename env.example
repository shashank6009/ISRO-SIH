# NAVIQ Environment Configuration
# Copy this file to .env and configure for your environment

# Database Configuration
DATABASE_URL=sqlite:///naviq.db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=naviq
DATABASE_USER=naviq_user
DATABASE_PASSWORD=your_secure_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-super-secret-api-key-here-change-this

# Streamlit Configuration
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_SENDER=alerts@yourorganization.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_RECIPIENTS=admin@yourorganization.com,ops@yourorganization.com

# Model Configuration
MODEL_PATH=models/
DATASET_PATH=src/DATASETS/
ARTIFACTS_PATH=artifacts/

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,https://yourdomain.com
JWT_SECRET_KEY=your-jwt-secret-key-change-this
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=naviq.log

# Performance
MAX_UPLOAD_SIZE=100MB
CACHE_TTL=300
RATE_LIMIT_PER_MINUTE=60

# Production Settings
ENVIRONMENT=production
DEBUG=false
ENABLE_TELEMETRY=false
